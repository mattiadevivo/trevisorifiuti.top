{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "types": ["vite/client", "@testing-library/jest-dom"],
    "noEmit": true,
    "isolatedModules": true,
    "paths": {
      "@ui/*": ["./src/components/ui/*"]
    }
  }
}
