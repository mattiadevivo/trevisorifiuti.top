{
	"name": "supabase",
	"description": "Project containing supabase functions, SQL migrations and utils",
	"scripts": {
		"start": "pnpm exec supabase start --debug -x vector",
		"start:db": "pnpm exec supabase db start",
		"stop": "pnpm exec supabase stop --no-backup",
		"stop:db": "pnpm exec supabase db stop",
		"db:reset": "pnpm exec supabase db reset",
		"migration:add": "pnpm exec supabase migrations new schema",
		"migration:apply": "pnpm exec supabase migrations up",
		"functions:serve": "supabase functions serve --env-file .env.local",
		"functions:serve-no-verify-jwt": "supabase functions serve --env-file .env.local --no-verify-jwt",
		"secrets:list": "pnpm exec supabase secrets list",
		"generate:typescript": "pnpm exec supabase gen types typescript --db-url postgresql://postgres:postgres@127.0.0.1:54322/postgres > ./supabase/functions/_shared/database.types.ts",
		"ui": "open http://127.0.0.1:54323",
		"lint-format-fix": "pnpm exec biome check --write",
		"db:test": "pnpm exec supabase db test"
	},
	"devDependencies": {
		"@biomejs/biome": "2.2.5",
		"supabase": "2.58.5"
	},
	"engines": {
		"node": "^=22.0.0"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"supabase"
		]
	}
}
